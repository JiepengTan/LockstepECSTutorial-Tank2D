#!/bin/bash
dir="$(cd $(dirname ${BASH_SOURCE[0]}) && pwd)"
cd $dir/../
pwd
cd ./bin/
echo "1.Code gen"
mono ./Tools.ECSGenerator.exe ../Config/ECSGenerator/Config.json

echo "2.Copy files"
mkdir -p ../Src/Game.Model/Src/__Entitas/
